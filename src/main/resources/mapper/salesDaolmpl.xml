<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.angzhao.dao.salesDao">

    <insert id="insertSalesId" parameterType="com.angzhao.entity.foodEntity">
        INSERT INTO sales_info(food_id)
        VALUES (#{foodId})
    </insert>

    <delete id="deleteSalesId" parameterType="com.angzhao.entity.foodEntity">
        DELETE FROM sales_info
        WHERE food_id = #{foodId}
    </delete>

    <select id="querySalesId" resultType="com.angzhao.entity.foodEntity">
        SELECT * FROM sales_info
        WHERE food_id = #{foodId}
    </select>

</mapper>